{
    "author": "TaylorHuang",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "description": "This extension will add 'Search with baidu' to context menu so as to search selected text easily with baidu when required",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "manifest_version": 2,
    "name": "Baidu Search",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "version": "0.1",
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}
